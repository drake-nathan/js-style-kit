{
  "name": "js-style-kit-root",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:stylekit": "turbo run build -F js-style-kit",
    "bump": "changeset",
    "changeset": "changeset",
    "ci": "node scripts/ci.js",
    "dev": "turbo run dev",
    "format": "prettier . --write --cache",
    "format:check": "prettier . --check --cache",
    "preinstall": "bun run scripts/check-bun-version.js",
    "lint": "eslint . --max-warnings=0 --cache --ignore-pattern docs --ignore-pattern packages --ignore-pattern apps",
    "lint:fix": "eslint . --max-warnings=0 --fix --cache --ignore-pattern docs --ignore-pattern packages --ignore-pattern apps",
    "sherif": "sherif",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "1.3.5",
    "js-style-kit": "workspace:*",
    "sherif": "1.9.0",
    "turbo": "2.7.3",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=22"
  }
}
