{
  "name": "js-style-kit-root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:stylekit": "turbo run build -F js-style-kit",
    "bump": "changeset",
    "changeset": "changeset",
    "ci": "node scripts/ci.js",
    "dev": "turbo run dev",
    "format": "prettier --write . --ignore-path .prettierignore.ci",
    "format:check": "prettier --check . --ignore-path .prettierignore.ci",
    "lint": "turbo run lint -- --max-warnings 0",
    "lint:fix": "turbo run lint -- --fix",
    "outdated": "pnpm outdated --recursive",
    "sherif": "sherif",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "update": "pnpm update --recursive"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "js-style-kit": "workspace:*",
    "sherif": "^1.4.0",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.15.6",
  "engines": {
    "node": ">=22"
  }
}
