{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["bun.lock"],
  "tasks": {
    "//#lint": {},
    "//#lint:fix": {},
    "//#sherif": {},
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"],
      "outputs": []
    },
    "sherif": {
      "cache": true,
      "inputs": ["**/package.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"],
      "outputs": []
    }
  }
}
