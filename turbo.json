{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#lint": {
      "dependsOn": ["^lint"]
    },
    "//#lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "//#lint:md": {
      "dependsOn": ["^lint:md"]
    },
    "//#sherif": {
      "dependsOn": ["^sherif"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"]
    },
    "lint:md": {
      "dependsOn": ["^lint:md"],
      "inputs": ["**/*.md", "!**/node_modules/**", "!**/dist/**"]
    },
    "sherif": {
      "cache": true,
      "inputs": ["**/package.json", "bun.lock"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!**/dist/**"
      ],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!**/dist/**"
      ],
      "outputs": ["coverage/**"]
    }
  }
}
