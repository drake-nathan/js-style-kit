{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#format": {
      "dependsOn": ["^format"]
    },
    "//#format:check": {
      "dependsOn": ["^format:check"]
    },
    "//#lint": {
      "dependsOn": ["^lint"]
    },
    "//#lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "//#sherif": {
      "dependsOn": ["^sherif"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": true,
      "inputs": [
        "**/*.{js,jsx,ts,tsx,json,md,mdx}",
        "prettier.config.js",
        ".prettierignore"
      ]
    },
    "format:check": {
      "cache": true,
      "inputs": [
        "**/*.{js,jsx,ts,tsx,json,md,mdx}",
        "prettier.config.js",
        ".prettierignore"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": ["$TURBO_DEFAULT$", "!**/node_modules/**", "!**/dist/**"]
    },
    "sherif": {
      "cache": true,
      "inputs": ["**/package.json", "pnpm-lock.yaml"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!**/dist/**"
      ],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!**/dist/**"
      ],
      "outputs": ["coverage/**"]
    }
  }
}
