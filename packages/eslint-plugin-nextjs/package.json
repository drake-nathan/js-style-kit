{
  "name": "eslint-plugin-nextjs",
  "version": "1.1.1",
  "description": "A fork of @next/eslint-plugin-next that's been upgraded for TypeScript and ESLint V9.",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "next",
    "nextjs",
    "eslint-plugin-next",
    "@next/eslint-plugin-next"
  ],
  "homepage": "https://github.com/drake-nathan/js-style-kit#readme",
  "bugs": {
    "url": "https://github.com/drake-nathan/js-style-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drake-nathan/js-style-kit.git"
  },
  "license": "MIT",
  "author": "Nathan Drake <nathan@drakewest.dev>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write --cache",
    "format:check": "prettier . --check --cache",
    "lint": "eslint . --max-warnings=0 --cache",
    "lint:fix": "eslint . --fix --max-warnings=0 --cache",
    "lint:inspect": "eslint --inspect-config",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fast-glob": "3.3.3"
  },
  "devDependencies": {
    "@eslint/core": "0.16.0",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "1.3.1",
    "@types/node": "22.18.12",
    "eslint": "9.38.0",
    "eslint-plugin-eslint-plugin": "7.2.0",
    "tsup": "8.5.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "engines": {
    "node": "^20.11.0 || >=21.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
