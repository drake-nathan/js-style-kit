{
  "name": "js-style-kit",
  "version": "0.8.4",
  "description": "A zero configuration style guide for ESLint and Prettier",
  "keywords": [
    "eslint",
    "prettier",
    "style guide"
  ],
  "homepage": "https://github.com/drake-nathan/js-style-kit#readme",
  "bugs": {
    "url": "https://github.com/drake-nathan/js-style-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drake-nathan/js-style-kit.git"
  },
  "license": "MIT",
  "author": "Nathan Drake <nathan@drakewest.dev>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin/index.cjs",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write --cache",
    "format:check": "prettier . --check --cache",
    "lint": "eslint . --max-warnings=0 --cache",
    "lint:fix": "eslint . --fix --max-warnings=0 --cache",
    "lint:inspect": "eslint --inspect-config",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@convex-dev/eslint-plugin": "1.0.0",
    "@prettier/plugin-oxc": "0.0.4",
    "@tanstack/eslint-plugin-query": "5.91.2",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-jsdoc": "61.1.12",
    "eslint-plugin-nextjs": "1.1.2",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "eslint-plugin-storybook": "10.0.3",
    "eslint-plugin-turbo": "2.6.0",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "prettier-plugin-css-order": "2.1.2",
    "prettier-plugin-curly": "0.4.0",
    "prettier-plugin-packagejson": "2.5.19",
    "prettier-plugin-sort-json": "4.1.1",
    "prettier-plugin-tailwindcss": "0.7.1",
    "typescript-eslint": "8.46.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "1.3.1",
    "@types/node": "24.10.0",
    "commander": "14.0.2",
    "glob": "11.0.3",
    "tsup": "8.5.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": "^20.11.0 || >=21.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
