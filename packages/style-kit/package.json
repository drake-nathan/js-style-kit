{
  "name": "js-style-kit",
  "version": "0.2.11",
  "description": "A zero configuration style guide for ESLint and Prettier",
  "keywords": [
    "eslint",
    "prettier",
    "style guide"
  ],
  "homepage": "https://github.com/drake-nathan/js-style-kit#readme",
  "bugs": {
    "url": "https://github.com/drake-nathan/js-style-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drake-nathan/js-style-kit.git"
  },
  "license": "MIT",
  "author": "Nathan Drake <nathan@drakewest.dev>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write --cache",
    "format:check": "prettier . --check --cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov"
  },
  "dependencies": {
    "eslint": "^9.24.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-nextjs": "^0.1.2",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.0.0-beta-bafa41b-20250307",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-turbo": "^2.4.4",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-curly": "^0.3.2",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript-eslint": "8.28.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.14.0",
    "commander": "^13.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "^20.11.0 || >=21.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
