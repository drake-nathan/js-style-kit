{
  "name": "js-style-kit",
  "version": "0.4.1",
  "description": "A zero configuration style guide for ESLint and Prettier",
  "keywords": [
    "eslint",
    "prettier",
    "style guide"
  ],
  "homepage": "https://github.com/drake-nathan/js-style-kit#readme",
  "bugs": {
    "url": "https://github.com/drake-nathan/js-style-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drake-nathan/js-style-kit.git"
  },
  "license": "MIT",
  "author": "Nathan Drake <nathan@drakewest.dev>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write --cache",
    "format:check": "prettier . --check --cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import-x": "^4.13.3",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-nextjs": "^1.0.2",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.9",
    "eslint-plugin-turbo": "^2.5.3",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-curly": "^0.3.2",
    "prettier-plugin-packagejson": "^2.5.14",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript-eslint": "^8.32.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.2.14",
    "@types/node": "^22.15.31",
    "commander": "^14.0.0",
    "glob": "^11.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "^20.11.0 || >=21.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
